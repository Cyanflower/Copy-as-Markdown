{
  "name": "copy-as-markdown",
  "displayName": "Copy as Markdown",
  "description": "Copy selected code with markdown formatting",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copyAsMarkdown.copySelected",
        "title": "%command.copySelected.title%",
        "category": "%command.category%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "copyAsMarkdown.copySelected",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste"
        }
      ],
      "commandPalette": [
        {
          "command": "copyAsMarkdown.copySelected",
          "when": "editorIsOpen"
        }
      ]
    },
    "keybindings": [
      {
        "command": "copyAsMarkdown.copySelected",
        "key": "ctrl+alt+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "copyAsMarkdown.includeFileName": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.includeFileName.description%"
        },
        "copyAsMarkdown.includeFilePath": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.includeFilePath.description%"
        },
        "copyAsMarkdown.filePathBase": {
          "type": "string",
          "enum": ["workspace", "absolute"],
          "enumDescriptions": [
            "%configuration.filePathBase.workspace%",
            "%configuration.filePathBase.absolute%"
          ],
          "default": "workspace",
          "description": "%configuration.filePathBase.description%"
        },
        "copyAsMarkdown.languageMap": {
          "type": "object",
          "default": {},
          "description": "%configuration.languageMap.description%",
          "additionalProperties": {
            "type": "string"
          }
        },
        "copyAsMarkdown.addEllipsis": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.addEllipsis.description%"
        },
        "copyAsMarkdown.addEllipsisDetail": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.addEllipsisDetail.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
